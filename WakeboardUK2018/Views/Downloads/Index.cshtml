@model IEnumerable<WakeboardUK2018.Models.Download>

@{
    ViewData["Title"] = "Index";
}
<section class="hero is-primary">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Downloads @if (User.Identity.IsAuthenticated)
                          {
                              <a asp-action="Create">[+]</a>
                          }
            </h1>
            <p class="lead">
                Official Wakeboard UK Downloads including rules, results and selection policies etc.
            </p>
        </div>
    </div>
</section>
<section class="section">
    <div class="container">
        @foreach (var item in Model)
        {
            <h2 class="subtitle">
                <a href="@Html.DisplayFor(modelItem => item.Url)">@Html.DisplayFor(modelItem => item.Name)</a>
                - @Html.DisplayFor(modelItem => item.Description)
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Edit" asp-route-id="@item.DownloadId">[Edit]</a>
                    <a asp-action="Delete" asp-route-id="@item.DownloadId">[Delete]</a>
                }
            </h2>
        }
    </div>
</section>