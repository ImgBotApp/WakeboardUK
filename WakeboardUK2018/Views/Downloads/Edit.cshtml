@model WakeboardUK2018.Models.Download
@{
    ViewData["Title"] = "Edit";
}<section class="hero is-primary">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Downloads @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Create">[+]</a>
                }
            </h1>
            <p class="lead">
                Official Wakeboard UK Downloads including rules, results and selection policies etc.
            </p>
        </div>
    </div>
</section>
<section class="section">
    <div class="container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DownloadId"/>
            <div class="field">
                <label asp-for="Name" class="label"></label>
                <div class="control">
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Description" class="label"></label>
                <div class="control">
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Url" class="label"></label>
                <div class="control">

                    <input asp-for="Url" class="form-control"/>
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
            <div class="field">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </form>

    </div>
</section>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}